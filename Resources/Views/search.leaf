#extend("base")

#export("title") { Results for "#raw(search)" }

#export("content") {
	<section>
		<div class="container">
			<div class="spacing" style="height: 100px;"></div>
			<div class="row justify-content-md-center">
				<a href="/" style="text-decoration: none; color: black;">
					<div class="col col-md-auto" style="text-align: center;">
						<h4>🍏 🔍</h4>
						<h4 class="align-bottom">Apple Search <span class="badge badge-secondary align-top" style="font-size:15px;">Beta</span></h4>
					</div>
				</a>

				<div class="col-md-auto">
					<div style="margin-top:25px;">
						<form action="/search" method="GET" id="search-form">
							<div class="input-group">
								<input type="text" class="form-control" placeholder="Search for..." aria-label="Search for..." name="query">
								<span class="input-group-btn">
									<button class="btn btn-secondary" type="submit" value="Submit">🔍</button>
								</span>
							</div>
						</form>
					</div>
				</div>

				<div class="col-md-auto">
					<div class="btn-group" style="margin-top:25px;">
						<select class="form-control form-control-sm" style="width: 125px" form="search-form" name="lang">
  							<option>🌍 All</option>
							<option>🇺🇸 English</option>
							<option>🇫🇷 French</option>
							<option>🇩🇪 German</option>
							<option>🇮🇹 Italian</option>
						</select>
					</div>	
				</div>
			</div>
		</div>
		
		</section>
		<section>
			<div class="container">
				<div class="spacing" style="height: 100px;"></div>
				<div class="cards">
					<div class="card">
						<div class="card-header">
							#raw(resultsCount) results 
						</div>
						#if(disambiguation) {
							<div class="row col-lg-12">
								#loop(disambiguations, "disambiguation") {
									<div class="col-lg-3">
										<div class="card-body">
											<a href="#(disambiguation.link)" class="btn btn-primary" target="_blank">#(disambiguation.title)</a>
											<p class="card-text">#(disambiguation.description)</p>
										</div>
									</div>
								}
							</div>
							<hr>
						}
						<!-- BEGIN LOOP -->
						#loop(results, "result") {
							<div class="card-body">
								<div class="container">
									<div class="row">
										<div class="col col-md-10">
											<a href="#"><h4 class="card-title">Page Title</h1></a><!--#raw(result.title)</h4-->
											<a href="#"><h6 class="card-subtitle mb-2 text-muted">wikipedia.org</h6></a>
										</div>
										<div class="col-4 col-md-2" style="text-align: right;">
											<p>#(result.lang)</p>
											<a href="https://translate.google.com/translate?hl=en&sl=auto&tl=en&u=tio.ch" target="_blank"><p>Translate page</p></a>
										</div>
									</div>
								</div>
							</div>
						}
						<!-- END LOOP -->
					</div>
				</div>
			</div>
		</section>
}

