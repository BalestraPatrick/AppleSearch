#extend("base")

#export("title") { Apple Search }

#export("content") {
	<div class="vertical-center">
		<div class="container" style="text-align: center;">
			<div style="height: 150px">
				<h1>🍏 🔍</h1>
				<h2>Apple Search <span class="badge badge-secondary align-top" style="font-size: 15px;">Beta</span></h2>
			</div>
			<div class="row justify-content-md-center">
				<div class="col-lg-3">
					<form action="/search" method="GET" id="search-form">
						<div class="input-group">					
							<input type="text" class="form-control" placeholder="Search for..." aria-label="Search for..." name="query">
							<span class="input-group-btn">
								<button class="btn btn-secondary" type="submit" value="Submit">🔍</button>
							</span>
						</div>
					</form>
				</div>
				<div class="col-lg-1">
					<div class="btn-group">
						<select class="form-control form-control-sm" style="width: 125px" form="search-form" name="lang">
  							<option>🌍 All</option>
							<option>🇺🇸 English</option>
							<option>🇫🇷 French</option>
							<option>🇩🇪 German</option>
							<option>🇮🇹 Italian</option>
						</select>
					</div>	
				</div>
			</div>
		</div>
	</div>
}

